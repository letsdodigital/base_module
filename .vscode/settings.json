{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "editor.formatOnSave": true,
  "black-formatter.args": ["--line-length", "79"],
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always"
  },

  "[html]": {
    "editor.defaultFormatter": "monosans.djlint"
  },
  "[django-html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "makefile.configureOnOpen": false,
  "terminal.integrated.tabs.enableAnimation": true,
  "terminal.integrated.tabs.description": "${sequence}",
  "terminal.integrated.tabs.title": "${process}",
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/backend/.venv/bin/python3.12",
  "python.analysis.extraPaths": [
    "${workspaceFolder}/backend/backend/.venv/lib/python3.12/site-packages"
  ]
}
